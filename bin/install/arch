#!/bin/bash

sudo pacman -Syu --needed \
    base-devel \
    man-db \
    dhcpcd \
    e2fsprogs \
    dosfstools \
    linux-headers \
    openssh \
    samba \
    sudo \
    ntp \
    zsh \
    git \
    vi \
    vim \
    tmux \
    cscope \
    make \
    cmake \
    less \
    tldr \
    lf \
    ranger \
    python \
    go \
    ghc \
    cabal-install \
    podman \
    podman-compose \
    tree \
    fzf \
    fd \
    bat \
    task \
    zoxide \
    jq \
    yq

# yay
EXT=$HOME/src/ext
YAY=$EXT/yay.git
mkdir -p $EXT
if [[ ! -d "$YAY" ]]; then
    git clone https://aur.archlinux.org/yay.git $YAY
    cd $YAY
    makepkg -si
fi

yay -Su --needed \
    sift \
    1password-cli
