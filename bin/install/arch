#!/bin/bash

sudo pacman -Syu --needed \
    base-devel \
    man-db \
    dhcpcd \
    e2fsprogs \
    dosfstools \
    linux-headers \
    iptables-nft \
    openssh \
    sudo \
    vim \
    tmux \
    ntp \
    zsh \
    git \
    cscope \
    make \
    less \
    tldr \
    lf \
    ranger \
    python \
    python-pip \
    python-pillow \
    go \
    tree \
    fzf \
    eza \
    fd \
    bat \
    task \
    zoxide \
    jq \
    yq \
    perl-image-exiftool \
    sysstat \
    iotop

# yay
EXT=$HOME/src/ext
YAY=$EXT/yay.git
mkdir -p $EXT
if [[ ! -d "$YAY" ]]; then
    git clone https://aur.archlinux.org/yay.git $YAY
    cd $YAY
    makepkg -si
fi

yay -Su --needed \
    sift \
    1password-cli \
    steghide # steganography
